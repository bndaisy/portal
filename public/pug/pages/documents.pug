extends ../layout/head
include ../templates/header
include ../components/icon
include ../components/tabs
include ../components/pagination

block title
    title Портал Моя работа - База знаний

block links
    link(rel='stylesheet', href='../css/main.css')
    // Favicon
    link(rel='shortcut icon', href='../favicon.ico', type='image/x-icon')
    
block content
    body#documents
        +header('/')
        main.documents.documents--align
            +tabs-nav(['Учредительные', 'Нормативные', 'Внутренние'], 0, ['one', 'two', 'three'])
                +tabs-content(true, 'one')
                +tabs-content(false, 'two')
                +tabs-content(false, 'three')

            +pagination('documents', '../')

        script(src='../js/main.js')
        script(src='../js/tabs.js')

