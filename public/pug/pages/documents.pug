                    +document('../', false)
                    +document('../', false)
                +tabs-content(false, 'two')
                    h3.documents__headline Общее наименование документа
                    +document('../', 'Федеральный')
                    +document('../', 'Московский')
                    +document('../', 'Департамента')
                    +document('../', 'Внутренний')
                    h3.documents__headline Общее наименование документа
                    +document('../', 'Федеральный')
                    +document('../', 'Московский')
                    h3.documents__headline Общее наименование документа
                    +document('../', 'Московский')
                    +document('../', 'Внутренний')

                +tabs-content(false, 'three')
                    h3.documents__headline Общее наименование документа
                    +document('../', false)
                    +document('../', false)
                +tabs-content(false, 'four')
                    +document('../', false)

            +pagination('documents', '../', true, true, true, true, true)

        script(src='../js/main.js')
        script(src='../js/tabs.js')

