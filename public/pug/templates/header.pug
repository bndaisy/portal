include ../components/icon
include ../components/social

mixin header(path)
    header.header
        .header-top.header__header-top
            .container
                a.logo.header-top__logo(href='' + path + 'pages/main.html')
                    picture
                        source(srcset='' + path + 'img/logo/logo_horizontal_white.png', media='(min-width: 1024px)')
                        source(srcset='' + path + 'img/logo/logo_mobile_white.png', media='(max-width: 1024px)')
                        img.logo__img(src='' + path + 'img/logo/logo_horizontal_white.png', alt='Logo')
                +social('header-top__social')
                .user-nav.header-top__user-nav
                    a.user-nav__link(href='#') Личный кабинет
                    .dropdown.user-nav__dropdown
                        a.dropdown__link Выход
                .sandwich.header-top__sandwich
                    .sandwich__line

        .header-bottom.header__header-bottom
            nav.nav.header-bottom__nav
                ul.nav__list
                    li.nav__item
                        a.nav__link(href='#') База знаний
                    li.nav__item
                        a.nav__link(href='#') Новости
                    li.nav__item
                        a.nav__link(href='#') Документы
                    li.nav__item
                        a.nav__link(href='' + path + 'pages/ourteam.html') Наша команда
                        .dropdown.nav__dropdown
                            ul.dropdown__list
                                li.dropdown__item
                                    a.dropdown__link(href='#') Адреса отделов
                                li.dropdown__item
                                    a.dropdown__link(href='' + path + 'pages/newcollegue.html') Новые струдники
                                li.dropdown__item
                                    a.dropdown__link(href='' + path + 'pages/birthcollegue.html') Дни рождения
                    .nav__substrate
                    li.nav__item.is-hidden
                        a.nav__link(href='#') Выход 
