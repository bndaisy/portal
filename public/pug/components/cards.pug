include ../components/icon

mixin userCard(cls, path)
    .user-card(class = '' + cls + '__user-card')
        img.user-card__img(src='' + path + 'img/stub/no-img.jpg', alt='User')
        .user-card__tooltip-elements
            .tooltip-element
                +icon(path, 'e-mail')
                span.tooltip somepost@somedomen.com
            .tooltip-element
                +icon(path, 'phone')
                span.tooltip somephone
        span.user-card__initial Фамилия Имя Отчество
        span.user-card__departament Отдел эксплуатации автоматизированных систем
        span.user-card__position Заместитель начальника отдела

mixin vacancyCard(path, cls, type)
    .vacancy-card(class = '' + cls + '__vacancy-card')
        span.vacancy-card__headline Название вакансии
        span.vacancy-card__wage 11 111 - 11 111
        span.vacancy-card__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Sapiente, eos!
        a.vacancy-card__link(href='/pages/inner/vacancy.html')
        if(type == 'Молодежь')
            +icon(path, 'school')
        if(type == 'Инвалиды')
            +icon(path, 'invalid')
        button.btn.btn--vacancy-correct
            +icon(path, 'correct')
        button.btn.btn--vacancy-delete
            +icon(path, 'delete')      

